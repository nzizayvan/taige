document.querySelectorAll('.buy-button').forEach(button => {
    button.addEventListener('click', function() {
        const productName = this.parentElement.dataset.name;
        const productPrice = this.parentElement.dataset.price;
        
        // Mock payment process
        const paymentConfirmed = confirm(`Proceed to payment for ${productName} - $${productPrice}?`);

        if (paymentConfirmed) {
            alert(`Thank you for purchasing ${productName} for $${productPrice}!`);
            // Here you would normally handle the payment process with a backend
        }
    });
});
